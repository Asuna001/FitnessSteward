.container {
  background-color: #6fc599;
  padding-top: 20rpx;
  display: flex; /* 设置容器为flex布局 */
  flex-direction: column; /* 垂直排列元素 */
  justify-content: space-between; /* 填充整个父元素 */
  align-items: center; /* 水平居中 */
  width: 100%;
  height: auto; /* 自适应高度 */
}

.title {
  text-align: center;
  font-size: 45rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 20rpx;
}

.form {
  background-color: #F2FFF2;
  border-radius: 10rpx;
  padding: 20rpx;
  width: 85%;
}

.sub-title {
  font-size: 40rpx;
  font-weight: bold;
  color: black;
  background-color: #e6ffea;
  padding: 10rpx;
  border-radius: 5rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.item {
  margin-bottom: 15rpx;
  /* font-size: 40rpx; */
}



/* 班级成员 */
.student-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.student-item {
  width: 30%;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.student-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #3B8C34;
  text-align: center;
  padding: 20rpx;
}