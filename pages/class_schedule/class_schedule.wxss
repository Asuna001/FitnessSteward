/* Optional course arrangement format */
/* 总列表 */
.braodcast-list{
  width:100%;
  display: flex;
  justify-content: center;
  flex-direction: row;
  flex-wrap: wrap;
}
/* subitem style */
.braodcast-item{
  width:200rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 2px 1px 1px #cccccc;
  margin: 8px;
}
/* The  image container style under the subitem */
.braodcast-image-container{
  width:200rpx;
  height:200rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}
/* The  image  style under the subitem */
.braodcast-image{
  width:200rpx;
  height:200rpx;
  display: inline-block;
}
/*  The  text container  style under the subitem */
.braodcast-info{
  height: 40rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-bottom:10rpx;
}
/* The  text   style under the subitem */
.braodcast-name{
  font-size: 14px;
  line-height: 62.5rpx;
  text-align: center;
}

.braodcast-text{
  font-size: 12px;
  line-height: 62.5rpx;    
}

.white-space{
  height:80rpx;
  display: flex;
  flex-direction:row;
  align-items: flex-end;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}

.white-space-text{
  font-size: 12px;
}