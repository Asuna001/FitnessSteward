<!--pages/shopping/shopping.wxml-->
<!-- Top swipp image -->
<view class="banner" style="width: 100%; height: 300rpx; display: block; box-sizing: border-box">
  <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{true}}" circular="{{true}}" indicator-dots="{{true}}" interval="2000" indicator-active-color="white" style="position: relative; left: 0rpx; top: -75rpx">
    <block wx:for="{{imgUrls}}">
      <swiper-item  >
      <image  src="{{item}}" class="slide-image" width="355" height="150" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>
  <text style="position: relative; left: 38rpx; top: -357rpx; color: rgb(255, 255, 255); font-size: 30px">运动训练营\n</text>
  <text style="position: relative; left: 38rpx; top: -319rpx; color: rgb(252, 252, 252); font-size: 20px">线上教练带跟练\n线下活动趣体验</text>
</view>

<!-- Four categorized buttons -->
<view class="category" style="position: relative; width: 750rpx; display: block; box-sizing: border-box; height: 220rpx; left: 0rpx; top: 0rpx">
  <view class="category_item" wx:for="{{iconArray}}">
    <view class="category_item_wrap" style="width: 190rpx; height: 140rpx; display: block; box-sizing: border-box;margin-top:4pt">
      <view class="icon_wrap">
        <image src="{{item.iconUrl}}" class="index_icon"></image>
      </view>
      <view class="category_item_text">
        <text>{{item.iconText}}</text>
      </view>
    </view>
  </view>
</view>
<view class="datacontainner"style="color:gray; "  style="position: relative; left: 0rpx; top: -61rpx">
  <text class="data">>查看更多</text>
</view>

