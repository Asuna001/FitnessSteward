/* company list */
.company-list {
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  }
  
  .company-item {
  width: 100%;
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  overflow: hidden;
  }
  
  .company-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  float: left;
  }
  
  .company-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  }
  
  .company-profile {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
  height: 3em;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  }
  
  /* company detail page */
  .detail-container {
  padding: 40rpx 20rpx;
  background-color: #fff;
  }
  
  .detail-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 50rpx;
  }
  
  .detail-name {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
  }
  
  .detail-profile {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 40rpx;
  }
  
  .detail-contact {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  }
  
  .back-btn {
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #7acfa6;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 40rpx;
  }