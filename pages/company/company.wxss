.card {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  color: #333;
}

.type {
  font-size: 28rpx;
  color: #7acfa6;
  margin-top: 10rpx;
}

.scores {
  margin-top: 20rpx;
}

.score-item {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.refresh-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #7acfa6;
  color: #fff;
  border-radius: 10rpx;
}
