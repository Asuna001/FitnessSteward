/* *************** event style ***************/
/* event overall layout */
.view_event {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* event image style */
.view_event .image {
    display: flex;
    width: 320px;
    height: 200px;
    border-radius: 10px;
    overflow: hidden;
}

/* event introduction style */
.view_event .introduction {
    font-size: 30rpx;
    font-weight: bold;
    vertical-align: middle;
    margin: 25rpx 0;
}

/* event participants and date style */
.view_event .people_date {
    display: flex;
    flex-direction: row;
    color: #999;
}
