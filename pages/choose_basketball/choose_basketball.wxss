/* ************** choose_basketball overall layout************* */
/* Overall style */
.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f9d1b3;
    border-radius: 50rpx;
}

/* title style */
#onlineView {
    height: 100rpx;
    background: #fff;
    margin: 0 0 10rpx 0;
    line-height: 150rpx;
    position: relative;
}

/* title's image style */
#onlineView>image {
    width: 30rpx;
    height: 40rpx;
    vertical-align: middle;
}

/* title's text style */
#onlineView>text {
    font-size: 40rpx;
    font-weight: bold;
    vertical-align: middle;
}


/* ************** details layout ************* */
/* basketball invention style */
.content .invent {
    margin: 20rpx 10rpx 20rpx 10rpx;
    /* border: red solid 1rpx; */
}

/* basketball image and benefit style */
.content .img_benefit {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 10rpx 20rpx 10rpx;
    justify-content: space-between;
}

.img_benefit .image {
    height: 320rpx;
    width: 605rpx;
}


/* coach introduction style */
.coach {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 10rpx 20rpx 10rpx;
    justify-content: space-around;
}

.coach .image {
    height: 370rpx;
    width: 900px;
    border-radius: 20rpx;
}

.coach .coach_introduction {
    margin: 0 0 0 10rpx;
    font-size: 10pt;
    border: #f9d1b3 solid 5rpx;
}


/* ************** more course details style ************* */
#moreDetails {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 40rpx;
    color: black;
    font-weight: bold;
    position: relative;
    padding: 0 0 0 10rpx;
}

/* arrow style */
.arrow {
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #999;
    border-right: 4rpx solid #999;
    transform: rotate(45deg);
    position: absolute;
    right: 30rpx;
    top: 38rpx;
}
