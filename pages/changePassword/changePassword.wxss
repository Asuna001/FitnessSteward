/* pages/changePassword/changePassword.wxss */page {
  height: 100%;
  background-color: white;
  margin: 0px;
  padding: 0px;
}

/* 顶部背景 */
.top-box {
  height: 30%;
  background-image: linear-gradient(#7acfa6, #3de09f);
  padding: 30rpx;
  color: white;
  font-weight: bold;
}

.next-text {
  margin-top: 15rpx;
  font-size: 40rpx;
}

/* 内容 */
.center-box {
  background-color: white;
  margin: -20% 20rpx 0rpx 20rpx;
  padding: 25rpx;
  border-radius: 15rpx;
  -webkit-filter: drop-shadow(0 0 8rpx #3de09f);
  filter: drop-shadow(0 0 8rpx #3de09f);
}

/* 导航 */
.nav {
  display: flex;
  text-align: center;
  font-size: 40rpx;
  margin-bottom: 8%;
}

.right {
  flex: 1;
  font-weight: bold;
  color: #3de09f;
}


.select text {
  color: #3de09f;
}

/* 输入框 */
.input-box {
  margin-top: 5%;
}

.wei-input {
  display: flex;
  align-items: center;
  margin-top: 4%;
  border-bottom: solid #e5e5e5 1rpx;
  padding-bottom: 2%;
}

.icon {
  margin-right: 2%;
}

.input {
  width: 100%;
  margin-left: 2%;
}


/* 验证码 */
.input-code {
  font-size: 24rpx;
  color: #3de09f;
  margin-left: auto;
  margin-right: 2%;
  border: 1rpx solid #e5e5e5;
  padding: 0.5% 1%;
  border-radius: 10rpx;
  white-space: nowrap;
}

/* 提交按钮 */
.submit-btn{
  display: flex;
  align-items:center;
  justify-content:center;
  margin-top: 5%;
  margin-bottom: 5%;
}

.button {
  width: 100%;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 10rpx #a5a5a5;
  padding: 5% 2%;
  color: white;
  font-weight: bold;
  border-radius: 15rpx;
}



.btn-text {
  color: white;
  /*设置文字颜色*/
  font-size: 28rpx;
  /*设置文字大小*/
}

.btn-box button:not(:last-child) {
  margin-right: 5%;
  /*设置两个按键之间的间隔*/
}

/* 重影 */
.shadow {
  box-shadow: 0rpx 0rpx 10rpx 0rpx #3de09f;
  border-radius: 25rpx;
  background-color: white;
}

.shadow-1 {
  height: 40rpx;
  margin: -20rpx 50rpx 0 50rpx;
}

.shadow-2 {
  position: relative;
  z-index: -888;
  height: 50rpx;
  margin: -30rpx 80rpx 0 80rpx;
}

.sumbit-btn button {
  margin-top: 5%;
  padding: 4% 2%;
  line-height: 1;
}

button:active {
  background-color: #F0F0F0;
  border: 2px solid black;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.25);
}